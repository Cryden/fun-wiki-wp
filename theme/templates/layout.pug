//- layout.pug

include ./includes/mixins.pug

doctype html
html
  head
    meta(
      charset="utf-8")
    meta(
      name="viewport" 
      content="width=device-width, initial-scale=1")
    meta(charset="UTF-8")
    meta(
      name='yandex-verification'
      content='46d661f0fc6c27a5')
    meta(
      name='advmaker-verification' 
      content='df1acbaa210da6f9c0c5808ee4229d64')
    title echo title
    base(
      href=get_template_directory_uri().'/fun-wiki')
    link(
      rel="stylesheet" 
      type="text/css"
      href='css/dark.css'
      id="theme_css")
    link(
      rel="stylesheet" 
      type="text/css" 
      href='css/components.css')
    style: include ../css/components.css
    
    block link

    block title
      title HTML5 Layout
      
  body
    .shadow
    include layout/header.pug
    main#app
      block content
      include layout/content_footer.pug
    include layout/footer.pug
    script(src='js/app.js' async)